<% if @food.errors.any? %>
 <div class='errors'>
    <h2>The following errors must be resolved</h2>
    <ul>
    <% @food.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div> 
<% end %>
<%= form_with model: @food, url: foods_path, data: { turbo: false }, method: :post do |f| %>

<div class='input_contain'>
  <div class='input_label'>
    <%= f.label :name %> 
    <%= f.text_field :name %>
  </div>

  <div class='input_label'>
    <%= f.label :measurement_unit %> 
    <%= f.text_field :measurement_unit %>
  </div>
  
  <div class='input_label'>
    <%= f.label :price %> 
    <%= f.text_field :price %>
  </div>

  <div class='input_label'>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>
  <div>
  <%= f.submit( class: "food_add_btn") %> 
</div>

<% end %>