<div class='add_food_container'>
    <% if @foods %>    
        <%= form_with( url: "/recipe_foods/#{@recipe_id}", method: :post) do |f| %>
            <div class='input_label'>
                <%= f.label :food_id, style: "display: block" %>
                <%= f.select :food_id, @foods.map { |food| [food.name, food.id] } %>
            </div>

            <div class='input_label'>
                <%= f.label :quantity %> <br>
                <%= f.number_field :quantity, step: 1 %>
            </div>

            <div>
                <%= f.submit( class: "food_add_btn") %>
            </div>
        <% end %>
    <% else %>
        <div>
            <span>You Dont Have any food yet to select from</span>
            <%= link_to 'Foods', foods_path %>
        </div>
    <% end %>

</div>