<% if @food.errors.any? %>
  <h2>The following errors must be resolved</h2>
  <ul>
   <% @food.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
<% end %>
<%= form_with model: @food, url: foods_path, data: { turbo: false }, method: :post do |f| %>

<div>
  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :measurement_unit %> <br>
    <%= f.text_field :measurement_unit %>
  </div>
  
  <div>
    <%= f.label :price %> <br>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </div>
  <%= f.submit %> <br>
</div>

<% end %>