<div class="recipe-new">
    <%= form_with model: @recipe, url: recipes_path, method: :post, class: 'create-new-recipe-form', scope: :recipe do |f| %>


            <div class="field">
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>

            <div class="field">
                <%= f.label :preparation_time_in_mins %>
                <%= f.number_field :preparation_time, step: 0.01 %>
            </div>

            <div class="field">
                <%= f.label :cooking_time_in_mins %>
                <%= f.number_field :cooking_time, step: 0.01 %>
            </div>

            <div class="radio-field">
                
                <%= f.label :public %>
                <%= f.radio_button :public, true %> Yes
                <%= f.radio_button :public, false %> No
            </div>

            <div class="field">
                <%= f.label :description %>
                <%= f.text_area :description %>
            </div>

            <%= f.submit 'Create Recipe', class: 'Submit-btn' %> <br>


    <% end %>
</div>
